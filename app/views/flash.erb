<!-- for signing out users -->
<% if flash[:notice] %>
  <div id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:errors] && !flash[:errors].empty? %>
  Sorry, there were the following problems with the form.
  <ul id="errors">
    <% flash.now[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %> 
  </ul>
<% end %>



